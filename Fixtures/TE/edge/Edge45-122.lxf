
{
  /* Titanic's End Fixture File */
  label: "Edge 45-122",
  tags: [ "edge45_122", "edge" ],

  parameters: {
    "points": { default: 133, type: "int", min: 1, label: "Points", description: "Number of points in the edge" },
    "host": { default: "10.7.6.14", type: "string", label: "Host", description: "Controller IP address or hostname" },    
    "output": { default: 2, type: "int", min: 1, max: 4, label: "Output", description: "Controller output 1-4" },
    "position": { default: 218, type: "int", min: 0, description: "Starting position, in pixels" },
    "artnetSequence": { default: false, type: "boolean", label: "ArtNet Sequence", description: "Whether ArtNet sequence packets are enabled" },
    "reverse": { default: true, type: "boolean", description: "Reverse the output direction" },
    
    "xOffset": { default: 3, type: "float", label: "X offset", description: "Location offset of edge from starting vertex" },
  
    # Debug tools
    "onCar": { default: true, type: "boolean", label: "On Car", description: "True = Locate panel to its position on the car, False = Locate to origin" }
  },
  
  transforms: [
    /* Transpose starting corner to Vertex0 */
    { x: "130.6294", enabled: "$onCar" },
    { y: "268.9449", enabled: "$onCar" },
    { z: "-18.0000", enabled: "$onCar" },

    /* Rotate to in line with Vertex0 and Vertex1 */
    { yaw: "-12.1637", enabled: "$onCar" },
    { roll: "30.0464", enabled: "$onCar" },

    /* X offset from starting vertex */
    { x: "$xOffset" }    
  ],

  meta: {
    "edgeId": "45-122",
    "v0": "45",
    "v1": "122"
  },

  components: [
    { type: "strip", 
      numPoints: "$points",
      spacing: "0.6562",
      reverse: "$reverse"
    }
  ],
  
  outputs: [
    { host: "$host", 
      universe: "$output*10+(($position*3)/512)", 
      channel: "($position*3)%512",
      protocol: "artnet", 
      sequenceEnabled: "$artnetSequence"
    }
  ]
}
